<header
  id="header"
  class="fixed w-full top-0 z-50 transition-all duration-300 bg-transparent p-2"
>
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="#inicio" class="flex items-center gap-2">
      <span
        class="text-white font-bold text-xl md:text-2xl transition-colors duration-300"
        >Martín Guette</span
      >
    </a>

    <!-- Mobile menu button -->
    <div class="md:hidden">
      <button
        id="menu-toggle"
        aria-label="Abrir menú"
        class="text-white focus:outline-none"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-8">
      <a
        href="#inicio"
        class="text-white hover:text-primary-light font-medium transition duration-300"
        >Inicio</a
      >
      <a
        href="#sobre-mi"
        class="text-white hover:text-primary-light font-medium transition duration-300"
        >Sobre Mí</a
      >
      <a
        href="#servicios"
        class="text-white hover:text-primary-light font-medium transition duration-300"
        >Servicios</a
      >
      <a
        href="#proyectos"
        class="text-white hover:text-primary-light font-medium transition duration-300"
        >Proyectos</a
      >
      <a
        href="#contacto"
        class="text-white hover:text-primary-light font-medium transition duration-300"
        >Contacto</a
      >
      <a
        href="#contacto"
        class="bg-primary hover:bg-primary-dark text-white py-2 px-4 rounded-md font-medium transition duration-300"
        >Consulta Gratis</a
      >
    </nav>
  </div>

  <!-- Mobile Navigation -->
  <div
    id="mobile-menu"
    class="md:hidden hidden bg-white w-full absolute top-full left-0 shadow-lg rounded-b-lg"
  >
    <div class="container mx-auto px-4 py-4 flex flex-col space-y-4">
      <a
        href="#inicio"
        class="text-gray-800 hover:text-primary font-medium transition duration-300 py-2"
        >Inicio</a
      >
      <a
        href="#sobre-mi"
        class="text-gray-800 hover:text-primary font-medium transition duration-300 py-2"
        >Sobre Mí</a
      >
      <a
        href="#servicios"
        class="text-gray-800 hover:text-primary font-medium transition duration-300 py-2"
        >Servicios</a
      >
      <a
        href="#proyectos"
        class="text-gray-800 hover:text-primary font-medium transition duration-300 py-2"
        >Proyectos</a
      >
      <a
        href="#contacto"
        class="text-gray-800 hover:text-primary font-medium transition duration-300 py-2"
        >Contacto</a
      >
      <a
        href="#contacto"
        class="bg-primary hover:bg-primary-dark text-white py-3 px-4 rounded-md font-medium transition duration-300 text-center"
        >Consulta Gratis</a
      >
    </div>
  </div>
</header>

<script>
  // Handle mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Handle header background change on scroll
  const header = document.getElementById('header');
  let scrollPos = 0;

  function checkScrollPosition() {
    if (!header) return;

    if (window.scrollY > 50) {
      header.classList.remove('bg-transparent');
      header.classList.add('bg-white', 'shadow-md');

      // Change text color for desktop menu
      const desktopLinks = header.querySelectorAll('nav a:not(:last-child)');
      desktopLinks.forEach((link) => {
        link.classList.remove('text-white');
        link.classList.add('text-gray-800');
      });

      // Change logo color
      const logo = header.querySelector('a > span');
      if (logo) {
        logo.classList.remove('text-white');
        logo.classList.add('text-primary');
      }

      // Change hamburger color
      const hamburger = header.querySelector('#menu-toggle');
      if (hamburger) {
        hamburger.classList.remove('text-white');
        hamburger.classList.add('text-gray-800');
      }
    } else {
      header.classList.add('bg-transparent');
      header.classList.remove('bg-white', 'shadow-md');

      // Revert text color for desktop menu
      const desktopLinks = header.querySelectorAll('nav a:not(:last-child)');
      desktopLinks.forEach((link) => {
        link.classList.add('text-white');
        link.classList.remove('text-gray-800');
      });

      // Revert logo color
      const logo = header.querySelector('a > span');
      if (logo) {
        logo.classList.add('text-white');
        logo.classList.remove('text-primary');
      }

      // Revert hamburger color
      const hamburger = header.querySelector('#menu-toggle');
      if (hamburger) {
        hamburger.classList.add('text-white');
        hamburger.classList.remove('text-gray-800');
      }
    }

    scrollPos = window.scrollY;
  }

  window.addEventListener('scroll', checkScrollPosition);
  window.addEventListener('load', checkScrollPosition);
</script>
